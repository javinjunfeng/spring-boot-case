        <!--在控制台打印sql , 不计入log文件-->
        <logger name="com.sztech.gateway.dao.mapper" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="FILE"/>
