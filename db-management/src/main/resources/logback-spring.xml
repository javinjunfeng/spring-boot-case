        </appender>

        <!--在控制台打印sql , 不计入log文件-->
        <logger name="com.sztech.gateway.dao.mapper" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <root level="ERROR">
            <appender-ref ref="FILE"/>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>