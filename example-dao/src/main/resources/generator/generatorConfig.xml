<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--<properties resource="application-dev.properties"/>-->

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- tk.mybatis配置 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="top.javinjunfeng.common.plugin.TkMybatisMapper"/>
        </plugin>

        <!-- 数据库链接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/Spring?useSSL=false&amp;useUnicode=true&amp;characterEncoding=utf-8"
                        userId="root"
                        password="katarina">
        </jdbcConnection>
        <!-- 生成实体类的包名和位置 -->
        <javaModelGenerator targetPackage="top.javinjunfeng.example.dao.entity" targetProject="../example-dao/src/main/java"/>
        <!-- 生成的映射文件包名和位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="../example-dao/src/main/resources"/>
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator targetPackage="top.javinjunfeng.example.dao.mapper" targetProject="../example-dao/src/main/java" type="XMLMAPPER"/>

        <!-- 要生成的那些表 -->
        <table tableName="db_info" domainObjectName="DbInfo">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>